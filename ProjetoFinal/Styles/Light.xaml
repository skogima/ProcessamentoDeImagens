<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:ProjetoFinal">

    <Color x:Key="TextForeground">#7d7d7d</Color>
    <SolidColorBrush x:Key="TextForegroundBrush" Color="{StaticResource TextForeground}" />

    <Color x:Key="CaptionForeground">#575757</Color>
    <SolidColorBrush x:Key="CaptionForegroundBrush" Color="{StaticResource CaptionForeground}" />

    <Color x:Key="LoadingPanelColor">#FAFAFA</Color>
    <SolidColorBrush x:Key="LoadingPanelBrush" Color="{StaticResource LoadingPanelColor}" />
    
    <Color x:Key="BorderColor">#303030</Color>
    <SolidColorBrush x:Key="BorderColorBrush" Color="{StaticResource BorderColor}" />

    <Color x:Key="DarkColor">#101010</Color>
    <SolidColorBrush x:Key="DarkColorBrush" Color="{StaticResource DarkColor}" />
    
</ResourceDictionary>